{
  "name": "otto",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "tsx src/index.ts serve",
    "setup": "tsx src/index.ts setup",
    "serve": "tsx src/index.ts serve",
    "build": "tsc -p tsconfig.json && node scripts/copy-assets.mjs",
    "start": "node dist/index.js serve",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint src tests",
    "lint:fix": "oxlint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" package.json tsconfig.json vitest.config.ts .prettierrc.json .oxlintrc.json README.md",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" package.json tsconfig.json vitest.config.ts .prettierrc.json .oxlintrc.json README.md",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format:check && pnpm run test"
  },
  "dependencies": {
    "@opencode-ai/sdk": "^0.5.15",
    "commander": "^14.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.0",
    "oxlint": "^1.47.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0"
  }
}
