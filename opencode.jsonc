{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5.3-codex",
  "small_model": "openai/gpt-5.3-codex",
  "plugin": [
    "opencode-agent-memory"
  ],
  "instructions": [
    "AGENTS.md"
  ],
  "permission": "allow",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  },
  "share": "disabled",
  "autoupdate": false,
  "snapshot": false
}