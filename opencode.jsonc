    //   "command": ["npx", "@smithery/cli", "run", "@smithery/obsidian-mcp"],
    //   "environment": {
    //     "OBSIDIAN_VAULT_PATH": "/home/marco/Obsidian"
    //   },
    //   "enabled": true
    // },
    //
    // Phase 3: Google Calendar
    // "gcal": {
    //   "type": "local",
    //   "command": ["npx", "@anthropic/google-calendar-mcp"],
    //   "enabled": true
    // }
  },

  // ─── Misc ─────────────────────────────────────────────────────────
  "share": "disabled",
  "autoupdate": false,
  "snapshot": false
}
